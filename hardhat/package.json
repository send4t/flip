{
  "name": "hardhat",
  "version": "1.0.0",
  "author": "@jbmerville",
  "license": "MIT",
  "scripts": {
    "compile": "npx hardhat compile && npx hardhat test",
    "compile:force": "rm -rf ./types && npx hardhat compile --force",
    "deploy:moonbeam": "npx hardhat deploy --network moonbeam --deployraffle true --deploycoinflip true",
    "deploy:moonbase": "npx hardhat deploy --network moonbase --deployraffle true --deploycoinflip true",
    "deploy:moonriver": "npx hardhat deploy --network moonriver --deployraffle true --deploycoinflip true",
    "deploy:localhost": "npx hardhat deploy --network localhost --deployraffle true --deploycoinflip true",
    "format:check": "prettier --check 'contracts/**/*.sol'",
    "format": "prettier --write 'contracts/**/*.sol'",
    "docker:moonbeam": "docker run --rm --name moonbeam_development -p 9944:9944 -p 9933:9933 purestake/moonbeam:v0.25.0 --dev --ws-external --rpc-external"
  },
  "dependencies": {
    "@chainlink/contracts": "^0.6.0",
    "@openzeppelin/contracts": "^4.2.0",
    "@openzeppelin/contracts-upgradeable": "^4.4.1",
    "@openzeppelin/hardhat-upgrades": "^1.12.0",
    "@usedapp/core": "^1.2.2",
    "dotenv": "^16.0.2",
    "hardhat": "^2.10.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@ethersproject/abi": "^5.4.7",
    "@ethersproject/providers": "^5.4.7",
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomicfoundation/hardhat-toolbox": "^1.0.2",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@openzeppelin/contracts": "^4.2.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.2.0",
    "@types/mocha": "^9.1.0",
    "@types/node": ">=12.0.0",
    "chai": "^4.2.0",
    "eslint": "^8.22.0",
    "eslint-config-next": "^12.2.5",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "eslint-plugin-unused-imports": "^2.0.0",
    "ethers": "^5.4.7",
    "hardhat-gas-reporter": "^1.0.8",
    "hardhat-typechain": "^0.3.5",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "solidity-coverage": "^0.7.21",
    "ts-node": ">=8.0.0",
    "typechain": "^8.1.0",
    "typescript": ">=4.5.0"
  }
}
